<Window x:Class="Plugin_Terminator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="539.1" Width="979.502">
    <Grid>
        <Button Content="Login to CRM" HorizontalAlignment="Left" Margin="17,10,0,0" VerticalAlignment="Top" Width="107" Click="LoginButton_Click"/>
        <Button x:Name="btnListPlugins" Content="List Plugins" HorizontalAlignment="Left" Margin="148,10,0,0" VerticalAlignment="Top" Width="135" Click="btnListPlugins_Click"/>
        <DataGrid x:Name="dgPluginAssemblies" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Height="247" Width="795" 
                  SelectionMode="Single" SelectionUnit="FullRow" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Plugin Assembly Name"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnDeletePlugin" Content="Delete Plugin" HorizontalAlignment="Left" Margin="825,146,0,0" VerticalAlignment="Top" Width="121" Height="49" Click="btnDeletePlugin_Click"/>
    </Grid>
</Window>
